<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    android:background="@color/bg_activity"
	android:paddingBottom="@dimen/margin_space"
	android:paddingTop="@dimen/margin_space">
    
    
        <LinearLayout 
            android:id="@+id/waitPaylayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:background="@drawable/view_bg_clickable_selector"
            android:orientation="vertical"
            android:gravity="center">
            
             <ImageView 
                android:id="@+id/home_menu_categroy_imgv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_categroy_home"/>
             
             <TextView
		        android:id="@+id/home_menu_categroy_txtv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="待付款"
		        android:layout_marginTop="@dimen/home_menu_text_top"
		        android:textColor="@color/color_font_gray"
				 android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>
	<LinearLayout
		android:id="@+id/sendlayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1.0"
		android:clickable="true"
		android:background="@drawable/view_bg_clickable_selector"
		android:orientation="vertical"
		android:gravity="center">

		<ImageView
			android:id="@+id/home_menu_order_sendimgv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/icon_order_home"/>

		<TextView
			android:id="@+id/tvSend"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="待发货"
			android:layout_marginTop="@dimen/home_menu_text_top"
			android:textColor="@color/color_font_gray"
			android:textSize="@dimen/font_size_normal"/>
	</LinearLayout>
         <LinearLayout 
            android:id="@+id/waitReceiverlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:background="@drawable/view_bg_clickable_selector"
            android:orientation="vertical"
            android:gravity="center">
            
             <ImageView 
                android:id="@+id/home_menu_shopcart_imgv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_shopcart_home"/>
             
             <TextView
		        android:id="@+id/tvWaitProduct"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="待收货"
		        android:layout_marginTop="@dimen/home_menu_text_top"
				 android:textColor="@color/color_font_gray"
				 android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>
    
         <LinearLayout 
            android:id="@+id/thinklayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:background="@drawable/view_bg_clickable_selector"
            android:orientation="vertical"
            android:gravity="center">
            
             <ImageView 
                android:id="@+id/home_menu_order_imgv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_order_home"/>
             
             <TextView
		        android:id="@+id/tvThink"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="待评价"
		        android:layout_marginTop="@dimen/home_menu_text_top"
				 android:textColor="@color/color_font_gray"
				 android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>
        
         <LinearLayout 
            android:id="@+id/returnProductlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:background="@drawable/view_bg_clickable_selector"
            android:orientation="vertical"
            android:gravity="center">
            
             <ImageView 
                android:id="@+id/home_menu_coupon_imgv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_coupon_home"/>
             
             <TextView
		        android:id="@+id/tvReturnPrduct"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="退换货"
		        android:layout_marginTop="@dimen/home_menu_text_top"
				 android:textColor="@color/color_font_gray"
		        android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>
</LinearLayout>